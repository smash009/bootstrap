{
  "root": true,
  "env": {
    "jquery": true,
    "qunit": true
  },
  "globals": {
    "bootstrap": false,
    "sinon": false,
    "Util": false,
    "Data": false,
    "Alert": false,
    "Button": false,
    "Carousel": false,
    "Simulator": false,
    "Toast": false,
    "EventHandler": false,
    "Manipulator": false,
    "SelectorEngine": false
  },
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "script"
  },
  "extends": [
    "xo",
    "xo/browser"
  ],
  "rules": {
    "capitalized-comments": "off",
    "indent": [
      "error",
      2,
      {
        "MemberExpression": "off",
        "SwitchCase": 1
      }
    ],
    "multiline-ternary": [
      "error",
      "always-multiline"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}
